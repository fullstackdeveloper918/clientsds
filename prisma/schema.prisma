generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL") // Use MySQL connection stringddddddddddddd
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}
model allProducts {
  id        String @id @default(uuid())
  productId String
  shop      String
  title     String
  status    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()

  @@unique([productId, shop]) // Define composite unique constraint
}

model ApiToken {
  id          String   @id @default(cuid())
  shop        String   @unique
  token       String
  usernameapi String   @default("") // assuming this is a string field
  passwordapi String   @default("") // set a default value
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

